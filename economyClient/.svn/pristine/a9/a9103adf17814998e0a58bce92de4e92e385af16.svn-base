<template>
	<view class="">
		<view class="reply-init">
			<image class="edit-icon" src="/static/img/common/icon_edit.png"></image>
			<input class="edit-input" maxlength="2000"  placeholder="说说你的见解" v-model="commentRemark" @confirm="addComment"></input>
			<view class="send-reply-pl"><image @tap="addGoodInfo" class="send-reply-pllogo" :src="canGoodInfo==2?'/static/img/index/dz_yes.png' : '/static/img/index/dz.png' "><text>{{likeNum}}</text></view>
			<view class="send-reply-pl"><image class="send-reply-pllogo" src="/static/img/index/pl.png"><text>{{commentNum}}</text></view>
			<view class="send-reply-pl"><image @click="favoriteWithData" class="send-reply-sclogo" :src="canFavorite==2?'/static/img/common/icon_favorite_yes.png' : '/static/img/common/icon_favorite_no.png' "  ><text></text></view>
			<view class="send-reply-pl"><image @click="shareButtonClick" class="send-reply-fxlogo" src="/static/img/index/fx.png"></view>
		</view>
		
		<!-- 分享弹出窗 -->
		<view v-if="showShareView" class="back-view" @click="cancelShare">
			<view class="bottom-view">
				<view class="text-detail" style="margin-top: 30rpx;">分享到</view>
				<view class="share-view">
					<view class="share-item" v-for="(item,index) in shareList" :key="index" @click="shareItemClick(item)">
						<image class="share-item-image" :src="item.image"></image>
						<view class="text-detail">{{item.title}}</view>
					</view>
				</view>
				<view class="cancel-button text-edit" @click="cancelShare">取消分享</view>
			</view>
		</view>
	</view>
</template>

<script>
	export default {
		props:{
			// 编号
			relationId:{
				type:[Number,String],
				default:0,
			},
			//类型
			goodType:{
				type:Number,
				default:0,
			},
			// 点赞数
			likeNum:{
				type:Number,
				default:0,
			},
			// 评论数
			commentNum:{
				type:Number,
				default:0,
			},
			//是否可收藏
			canFavorite:{
				type:Number,
				default:1, //1是，2否
			},
			//是否可点赞
			canGoodInfo:{
				type:Number,
				default:1, //1是，2否
			}
		},
		data() {
			return {
				commentRemark:"", //评价内容
				showShareView:false,
				shareList:[],
				shareData: {
					type: Object,
					default () {
						return {
							title: "ye南昌",
							url: "https://vr.chinavryan.com/tour/35c8ddf4cf676fad",
							imageUrl: "",
							summary: "我在南昌，我正在使用ye南昌App，下载ye南昌App,让你爱上南昌！"
						}
					}
				}
			}
		},
		mounted() {
			this.queryDetail(this.relationId,this.goodType);
		},
		methods: {
			//添加收藏
			favoriteWithData:function(){
				if(this.request.alreadyLogin()){
					var url = "/memberapi/api/userFavorite/cancel.do";
					var data = {
						 relationId : this.relationId,
						 favoriteType : this.goodType
					}
					if(this.canFavorite ==1){
						url = "/memberapi/api/userFavorite/add.do";
					}else{
						url = "/memberapi/api/userFavorite/cancel.do";
					}	
					var that = this;
					this.request.post(url,data).then(res=>{
						let canFavoriteValue = 1;
						if (res.returncode === 0 && that.canFavorite ==1) {
							that.request.toastTips("收藏成功");
							canFavoriteValue = 2;
						}else{
							that.request.toastTips("取消收藏");
							canFavoriteValue = 1;
						}
						let item = {
							commentNum:that.commentNum,
							likeNum:that.likeNum,
							canFavorite:canFavoriteValue,
						}
						that.$emit('refresComment', item);
					})
				}
			},
			//点赞
			addGoodInfo:function(){
				if(this.request.alreadyLogin()){
					let url = '/memberapi/api/goodInfo/add.do';
					let data = {
						relationId: this.relationId,
						goodType:this.goodType,  
					};
					if(this.canGoodInfo ==1){ //添加点赞
						url = '/memberapi/api/goodInfo/add.do';
					}else{ //取消点赞
						url = '/memberapi/api/goodInfo/cancel.do';
					}
					var that = this;
					this.request.post(url, data).then(res => {
						let canGoodInfoValue = 1,likeNumValue=that.likeNum;
						if (res.returncode === 0 && that.canGoodInfo ==1) {
							that.request.toastTips("点赞成功");
							canGoodInfoValue = 2;
							likeNumValue ++;
						}else{
							that.request.toastTips("取消点赞");
							canGoodInfoValue = 1;
							likeNumValue--;
						}
						let item = {
							canGoodInfo:canGoodInfoValue,
							likeNum:likeNumValue,
							commentNum:that.commentNum,
						}
						that.$emit('refresComment', item);
					})
				}
			},
			//分享
			setupShareItem:function(provider,title,scene){
				var item = {
					provider : provider,
					scene : scene,
					title : title,
					image : "/static/img/share/"+scene+".png"
				}
				return item;
			},
			shareButtonClick:function(){
				this.util.shareWithData(this.shareData);
				// var self = this;
				// uni.getProvider({
				// 	service:"share",
				// 	success:function(res){
				// 		//H5测试，真机调试或者打包时需要注释掉
